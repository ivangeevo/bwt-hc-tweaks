{
  "schemaVersion": 1,
  "id": "bwt_hct",
  "version": "${version}",
  "name": "BWT: HC Tweaks",
  "description": "Hardcore tweaks and features for Better With Time",
  "authors": [
    "ivangeevo"
  ],
  "contact": {},
  "license": "CC-BY-4.0",
  "icon": "assets/bwt-hc-tweaks/icon.png",
